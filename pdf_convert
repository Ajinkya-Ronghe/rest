import * as html2pdf from 'html2pdf.js';

convertToPDF(): void {
  // Get the HTML element containing the table
  const element = document.getElementById('pdfTable'); // Replace with the ID of your HTML table

  if (!element) {
    console.error('Element with ID "pdfTable" not found');
    return;
  }

  // Define options for the PDF generation
  const options = {
    margin: 10,
    filename: 'ExportedData.pdf',
    html2canvas: {
      scale: 2, // Higher scale for better resolution
    },
    jsPDF: {
      unit: 'mm',
      format: 'a4',
      orientation: 'portrait',
    },
  };

  // Generate and download the PDF
  html2pdf().from(element).set(options).save();
}
