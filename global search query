DO $$
DECLARE
    table_name TEXT := 'your_table_name'; -- Replace with your table name
    search_value TEXT := 'your_search_value'; -- Replace with the value to search
    col_name TEXT;
    sql_query TEXT;
BEGIN
    FOR col_name IN
        SELECT column_name
        FROM information_schema.columns
        WHERE table_name = table_name
    LOOP
        sql_query := format('SELECT %L AS column_name FROM %I WHERE CAST(%I AS TEXT) = %L',
                            col_name, table_name, col_name, search_value);
        EXECUTE sql_query;
    END LOOP;
END $$;
