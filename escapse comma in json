function escapeCommasInJsonValues(json: any): any {
  // Recursively traverse the JSON object
  const traverseAndReplace = (obj: any) => {
    for (const key in obj) {
      if (obj.hasOwnProperty(key)) {
        if (typeof obj[key] === 'string') {
          // Replace all commas with "\,"
          obj[key] = obj[key].replace(/,/g, '\\,');
        } else if (typeof obj[key] === 'object' && obj[key] !== null) {
          // Recurse if the value is an object or array
          traverseAndReplace(obj[key]);
        }
      }
    }
  };

  // Create a deep copy to avoid mutating the original JSON
  const jsonCopy = JSON.parse(JSON.stringify(json));
  traverseAndReplace(jsonCopy);
  return jsonCopy;
}

// Example usage
const jsonObject = {
  name: "John, Doe",
  address: {
    city: "New York, NY",
    zip: "10001"
  },
  hobbies: ["reading, writing", "coding"],
};

const escapedJson = escapeCommasInJsonValues(jsonObject);
console.log(escapedJson);
